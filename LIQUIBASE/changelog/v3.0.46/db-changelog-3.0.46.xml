<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">


    <changeSet id="UNIONVMS-3666" author="emrinalgr">
        <update tableName="rule">
            <column name="expression" value="!subActivity &amp;&amp; codeTypeValueEquals(faReportDocumentTypeCode, &quot;DECLARATION&quot;) &amp;&amp; !valueContainsAny(typeCode, &quot;LANDING&quot;, &quot;TRANSHIPMENT&quot;) &amp;&amp; !validDelimitedPeriod(delimitedPeriod, true, false)"/>
            <where>BR_ID = 'FA-L02-00-0107'</where>
        </update>

        <update tableName="rule">
            <column name="expression" value="!subActivity  &amp;&amp; codeTypeValueEquals(faReportDocumentTypeCode, &quot;DECLARATION&quot;) &amp;&amp; (!valueContainsAny(typeCode, &quot;LANDING&quot;, &quot;TRANSHIPMENT&quot;) &amp;&amp; !validDelimitedPeriod(delimitedPeriod, false, true)) || (occurrenceDateTime == null &amp;&amp; !validDelimitedPeriod(delimitedPeriod, false, true))"/>
            <where>BR_ID = 'FA-L02-00-0108'</where>
        </update>
    </changeSet>

    <changeSet id="UNIONVMS-3888" author="emrinalgr">
        <update tableName="rule">
            <column name="expression" value="&quot;PULL&quot;.equals(messageType) &amp;&amp; (referencedID != null &amp;&amp; referencedID.schemeId == &quot;UUID&quot; &amp;&amp; !validateFormat(referencedID) &amp;&amp; (purposeCode != null &amp;&amp; (purposeCode.value == &quot;1&quot; || purposeCode.value == &quot;5&quot; || purposeCode.value == &quot;3&quot;))) &amp;&amp; !containsAny(nonUniqueIdsList, Arrays.asList(referencedID))"/>
            <where>BR_ID = 'FA-L03-00-0038'</where>
        </update>
    </changeSet>

</databaseChangeLog>