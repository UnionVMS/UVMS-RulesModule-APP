<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    <changeSet id="UNIONVMS-4795-template-fix-and-rule-update" author="nomikosi">
        <update tableName="rule">
            <column name="property_names" value="specifiedContactParties"/>
            <where>br_id = 'FA-L00-00-0621'</where>
        </update>

        <update tableName="context_expression">
            <column name="expression" value="(specifiedContactPersons == null || isEmpty(specifiedContactPersons)) &amp;&amp; !isFromParentFishingActivity"/>
            <where>id = '620'</where>
        </update>

        <update tableName="context_expression">
            <column name="expression" value="roleCode != null &amp;&amp; roleCode.value == &quot;PAIR_FISHING_PARTNER&quot; &amp;&amp; (isEmpty(specifiedContactPartyRoleCodes) || (specifiedContactPersons == null || isEmpty(specifiedContactPersons)))"/>
            <where>id = '621'</where>
        </update>

        <rollback>
            <update tableName="rule">
                <column name="property_names" value="specifiedContactPartyRoleCodes"/>
                <where>br_id = 'FA-L00-00-0621'</where>
            </update>

            <update tableName="context_expression">
                <column name="expression" value="specifiedContactPersons == null || isEmpty(specifiedContactPersons)"/>
                <where>id = '620'</where>
            </update>

            <update tableName="context_expression">
                <column name="expression" value="roleCode != null &amp;&amp; roleCode.value == &quot;PAIR_FISHING_PARTNER&quot; &amp;&amp; isEmpty(specifiedContactPartyRoleCodes)"/>
                <where>id = '621'</where>
            </update>
        </rollback>
    </changeSet>
</databaseChangeLog>
