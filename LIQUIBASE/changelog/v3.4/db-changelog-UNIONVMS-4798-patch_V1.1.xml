<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    <changeSet id="UNIONVMS-4798-template-fix-and-rule-update-for-659" author="nomikosi">
        <update tableName="rule">
            <column name="property_names" value="relatedFLUXLocations"/>
            <where>br_id = 'FA-L02-00-0659'</where>
        </update>

        <update tableName="context_expression">
            <column name="expression" value="!isEmpty(relatedFLUXLocations)  &amp;&amp; hasDuplicateLocationType(relatedFLUXLocations)  &amp;&amp; !fluxLocationContainsApplicableFLUXCharacteristic(relatedFLUXLocations)"/>
            <where>id = '659'</where>
        </update>

        <rollback>
            <update tableName="rule">
                <column name="property_names" value="fishingActivityFluxCharacteristic"/>
                <where>br_id = 'FA-L02-00-0659'</where>
            </update>

            <update tableName="context_expression">
                <column name="expression" value="!isEmpty(fishingActivityRelatedFLUXLocations) &amp;&amp; hasDuplicateLocationType(fishingActivityRelatedFLUXLocations) &amp;&amp; !fluxLocationContainsApplicableFLUXCharacteristic(fishingActivityRelatedFLUXLocations)"/>
                <where>id = '659'</where>
            </update>
        </rollback>
    </changeSet>
</databaseChangeLog>
