<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    <changeSet id="UNIONVMS-4794-correct-wording-for-FA-L03-00-0038" author="nomikosi">
        <update tableName="rule">
            <column name="note" value="Must be an identifier of an accepted report." />
            <where>br_id = 'FA-L03-00-0038'</where>
        </update>

        <rollback>
            <update tableName="rule">
                <column name="note" value=" Must be an identifier of an acknowledged report." />
                <where>br_id = 'FA-L03-00-0038'</where>
            </update>
        </rollback>
    </changeSet>

    <changeSet id="UNIONVMS-4794-correct-wording-for-FA-L02-00-0366" author="nomikosi">
        <update tableName="rule">
            <column name="note" value="Check presence. 2 occurrences must be present." />
            <where>br_id = 'FA-L02-00-0366'</where>
        </update>

        <rollback>
            <update tableName="rule">
                <column name="note" value="FA_Query SimpleFA_QueryParameter at least 2 occurrences must be present" />
                <where>br_id = 'FA-L02-00-0366'</where>
            </update>
        </rollback>
    </changeSet>

    <changeSet id="UNIONVMS-4794-correct-wording-for-FA-L02-00-0374" author="nomikosi">
        <update tableName="rule">
            <column name="note" value="For EU fishing vessels only a query on CFR is mandatory" />
            <where>br_id = 'FA-L02-00-0374'</where>
        </update>

        <rollback>
            <update tableName="rule">
                <column name="note" value="For EU vessels only query on CFR or IRCS" />
                <where>br_id = 'FA-L02-00-0374'</where>
            </update>
        </rollback>
    </changeSet>
</databaseChangeLog>
